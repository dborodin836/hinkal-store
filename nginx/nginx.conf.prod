upstream api {
    server backend:8000;
}

server {
  listen 80;

  server_name hinkal.fun;

  location /admin {
    proxy_pass http://api;
  }

  location /api {
    proxy_pass http://api;
  }

  location /media {
    autoindex on;
    proxy_pass http://api;
  }

  location /static {
    autoindex on;
    alias /home/app/staticfiles/;
  }
}
